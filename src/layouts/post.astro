---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import dayjs from 'dayjs';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

type Props = CollectionEntry<'post'>['data'];

const { title, description, date, image } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description ?? ''} />
  </head>

  <body>
    <Header />
    <main class="p-10">
      <div class="text-center">
        <p class="text-gray-500 text-sm mb-4">{dayjs(date).format('YYYY.MM.DD')}</p>
        <h4 class="text-xl mb-4">{title}</h4>
      </div>
      <div class="m-auto max-w-screen-lg mb-10">
        <img class="object-fit" src={image} />
      </div>
      <div class="m-auto max-w-screen-lg px-20">
        <article class="max-w-none prose prose-lg">
          <slot />
        </article>
      </div>
    </main>
    <Footer />
  </body>
</html>
